@using MVC2.Models
@model List<Student> 
<!--  //type of model (everything should be in lower case whenever accessing the model) -->

         @* using AtTheRate Symbol we can use foreach loop and access all the properties like we do normally in models *@
        <!DOCTYPE html>
        <html>
        <head>
            <meta charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/brands.min.css" integrity="sha512-8RxmFOVaKQe/xtg6lbscU9DU0IRhURWEuiI0tXevv+lXbAHfkpamD4VKFQRto9WgfOJDwOZ74c/s9Yesv3VvIQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <title>StudentsInfo Page</title>
        </head>
        <body>
            <div>
        <p class="h1">Student's Information</p>

        <div class="fixed-auto">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-right mt-3">
                        <a asp-controller="Student" asp-action="Create" class="btn btn-dark">
                            <i class="fa-solid fa-calendar-plus  btn-dark "></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">RollNo</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                    <tr>
                        @*    This is how we access the Properties for displaying     *@
                        <td>@obj.RollNo </td>
                        <td>@obj.Name </td>
                        <td>@obj.Email </td>
                        <td>@obj.PhoneNumber </td>
                        <td>
                              <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.RollNo" class="btn btn-dark mx-1">
                                    <i class="fa-solid fa-trash btn-outline-light"> </i>
                              </a>
                        </td>
                    </tr>
                    }
                </tbody>
        
            </table>
        </div>
        </div>
                <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        </body>
        </html>
    
